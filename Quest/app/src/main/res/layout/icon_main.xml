<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/package_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp">
    <!--横线-->
    <View
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:background="@color/kleinBlue" />

    <!--背包部分-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <!--个人信息页面135dp-->
        <LinearLayout
            android:id="@+id/package_information"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/icon_cat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/icon_cat" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/package_account"
            android:layout_width="0dp"
            android:layout_columnWeight="1"

            android:layout_row="0"
            android:layout_column="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_bee"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/icon_bee" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/package_settings"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_duck"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/icon_duck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/package_achievement"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/icon_food"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/icon_food" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/package_date"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_lattice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/icon_lattice" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/package_like"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_rabbit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/icon_rabbit" />

        </LinearLayout>


    </GridLayout>

    <!--横线-->
    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@color/kleinBlue" />

</LinearLayout>