<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rec_friends_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/unknown_red"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:minHeight="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:background="@drawable/circle"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/friend_profile"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:scaleType="fitCenter"
            android:src="@drawable/pixel_hero" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_friend_nickname"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:fontFamily="@font/pixel" />

            <TextView
                android:id="@+id/tv_friend_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="10dip"
                android:alpha="0.5"
                android:fontFamily="@font/pixel"
                android:textColor="@color/grey"
                android:textSize="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/coin_pixel" />

            <TextView
                android:id="@+id/tv_friend_coin"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:fontFamily="@font/pixel"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

