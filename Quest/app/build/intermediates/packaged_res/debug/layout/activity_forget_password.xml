<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pineFlowerYellow"
    tools:context=".ForgetPasswordActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/pixel"
        android:gravity="center"
        android:text="@string/forget_paw"
        android:textColor="@color/kleinBlue"
        android:textSize="30sp" />

    <include
        android:id="@+id/main_title"
        layout="@layout/quest_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:orientation="vertical">


        <ImageView
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pacman_ghost" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:fontFamily="@font/pixel"
            android:gravity="center"
            android:text="@string/app_name_en"
            android:textColor="@color/kleinBlue"
            android:textSize="48sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixel"
            android:gravity="center"
            android:text="@string/app_name_ch"
            android:textColor="@color/kleinBlue"
            android:textSize="24sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <include
            android:id="@+id/forget_paw"
            layout="@layout/forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>
